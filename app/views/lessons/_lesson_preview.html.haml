%li.list-group-item
  - if lesson.viewed(current_user) == true
    .text-success.far.fa-check-square
  - else
    .text-danger.far.fa-check-square
  = link_to lesson.title, course_section_lesson_path(@course, @section, lesson)
  .float-end
    - if policy(@section).edit?
      = link_to 'Edit', edit_course_section_lesson_path(@course, @section, lesson), class: 'btn btn-sm btn-warning'
      = link_to 'Destroy lesson', [@course, @section, lesson], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-white'
  %p